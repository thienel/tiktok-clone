    "ExpiryInMinutes": 60,
    "RefreshTokenExpiryInDays": 7
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "FromEmail": "your-email@gmail.com",
    "FromName": "TikTok Clone",
    "Username": "your-email@gmail.com",
    "Password": "your-app-password"
  },
  "RateLimitSettings": {
    "PermitLimit": 100,
    "WindowInSeconds": 60,
    "QueueLimit": 10
  },
  "AllowedHosts": "*"
