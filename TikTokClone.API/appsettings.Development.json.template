{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TikTokCloneDb;Trusted_Connection=true;MultipleActiveResultSets=true;",
    "SqlServer": "Data Source=YOUR_SERVER;Initial Catalog=TikTokCloneDb;Integrated Security=true;TrustServerCertificate=true;"
